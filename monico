#! /bin/bash
set -eu
readonly version='0.2.0'

main() {
  parse_flags "$@"
  monitor | execute
}

parse_flags() {
  while [ "$#" -gt 0 ]; do
    case "$1" in
      -C|--no-clear)
        require_clear=0
        ;;
      -C*)
        require_clear=0
        next="-${1#-C}"
        shift
        set -- "$next" "$@"
        continue
        ;;
      -d|--directory)
        if [ "$#" -lt 2 ]; then
          echo "${0##*/}: option requires an argument -- '${1##*-}'" >&2
          exit 2
        fi
        directory="$2"
        shift
        ;;
      -d*)
        directory="${1#-d}"
        ;;
      --directory=*)
        directory="${1#--directory=}"
        ;;
      -h|--help)
        usage
        exit 0
        ;;
      -v|--version)
        version
        exit 0
        ;;
      --)
        shift
        break
        ;;
      -*)
        echo "${0##*/}: unrecognized option -- '${1##*-}'" >&2
        exit 2
        ;;
      *)
        break
        ;;
    esac
    shift
  done
  if [ "$#" -lt 1 ]; then
    echo "${0##*/}: no specify cmd" >&2
    exit 2
  fi
  if [ -z "$(type -- "$1" 2> /dev/null)" ]; then
    echo "${0##*/}: $1: cannot execute" >&2
    exit 2
  fi
  cmd="$1"
  args=("${@:2}")
  directory="${directory:-$(pwd)}"
  require_clear="${require_clear:-1}"
}

usage() {
  cat <<EOF >&2
Usage: ${0##*/} [OPTION]... COMMAND [ARGS]...
Execute COMMAND for changes to current directory.

Options:
  -C, --no-clear         suppress clear at execute
  -d, --directory=PATH   change monitored directory to PATH
  -h, --help             display this help text and exit
  -v, --version          output version information and exit
EOF
}

version() {
  echo "$version" >&2
}

monitor() {
  inotifywait \
    --event   'create,delete,modify,move' \
    --exclude '.*\.sw[pox]' \
    --quiet \
    --monitor \
    --recursive \
    "$directory"
}

execute() {
  set +eu
  while read -r; do
    # ignore continuous notification
    while read -r -t 0.3; do
      :
    done
    if [ "$require_clear" -eq 1 ]; then
      clear
    fi
    "$cmd" "${args[@]}"
    # ignore notification by the command
    while read -r -t 0.3; do
      :
    done
  done
}

main "$@"
exit 0
